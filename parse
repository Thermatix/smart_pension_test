#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative 'lib/log_parser'

case ARGV.first
when '-h', '--help'
  puts <<~TEXT
    usage: parse log_file_name.log
           parse [-h | --help]: display help
  TEXT
else
  lp = Log_Parser.new(ARGV.first)
  puts 'Log file not found' and exit unless lp.log_file_exists?
end
